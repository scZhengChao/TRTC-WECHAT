/* pages/meeting/meeting.wxss */

@import "../../common.wxss";
page {
  height: 100%;
}

.content {
  width: 100%;
  position: absolute;
}

.content .video-container {
  display: flex;
  width: 100%;
  height: 100%;
  overflow: hidden;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}

.video-timer {
  height: 86px;
  line-height: 86px;
  position: absolute;
  bottom: 80px;
  width: 100%;
  text-align: center;
  font-size: 16px;
  color: #333;
}

.video-connect-icon {
  width: 80rpx;
  height: 80rpx;
}

#paperview {
  position: absolute;
  width: 100%;
  z-index: 8;
  bottom: 64px;
  height: 80%;
}

#paperview image {
  width: 100%;
  margin: 0 auto;
  display: block;
  height: 100%;
  z-index: 8;
}

.content .footer {
  width: 100%;
  font-size: 24rpx;
  justify-content: flex-end;
  /* height: 150px; */
  position: fixed;
  bottom: 0;
  z-index: 10
}

.content .footer .toolbar {
  /* border-top: 1px solid #A5A5A5; */
  width: 100%;
  height: 80px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.toolbar .btn {
  width: 240rpx;
  height: 104rpx;
  display: flex;
  justify-content: center;
  align-items: center
}

.content .footer .mic image {
  width: 46rpx;
  height: 52rpx;
}

.hangup {
  background: #FF6F6F;
  box-shadow: 0 2px 8px 0 rgba(255, 111, 111, 0.60);
  border-radius: 100px;
  display: flex;
  justify-content: center;
  align-items: center
}

.content .footer .hangup image {
  width: 82rpx;
  height: 40rpx;
}

.content .footer .camera image {
  width: 60rpx;
  height: 48rpx;
}

.content .footer .speaker image {
  width: 60rpx;
  height: 48rpx;
}